[Unit]
Description=GoddessBlackHeart Discord Bot
After=multi-user.target
[Service]
WorkingDirectory=/home/noire/Documents/GoddessBlackHeartBot
Environment="PYTHONHASHSEED=0"
User=noire
Group=noire
ExecStart=/usr/bin/python3 /home/noire/Documents/GoddessBlackHeartBot/GoddessBlackHeartBot.py >> /home/noire/Documents/GoddessBlackHeartBot/bot.log
Type=idle
Restart=on-failure
RestartSec=15
TimeoutStartSec=15

[Install]
WantedBy=multi-user.target
